<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="syrsafetech"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:thing="https://openhab.org/schemas/thing-description/v1.0.0"
	xsi:schemaLocation="https://openhab.org/schemas/thing-description/v1.0.0 https://openhab.org/schemas/thing-description-1.0.0.xsd">

	<thing-type id="syrleakageprotection">

		<label>SyrSafeTech Binding Thing</label>
		<description>Sample thing for SyrSafeTech Binding</description>

		<channels>
			<channel id="shutoff" typeId="shutoff"/>
			<channel id="selectProfile" typeId="selectProfile"/>
			<channel id="numberOfProfiles" typeId="numberOfProfiles"/>
			<channel id="profileAvailability" typeId="profileAvailability"/>
			<channel id="profileName" typeId="profileName"/>
			<channel id="profileVolumeLevel" typeId="profileVolumeLevel"/>
			<channel id="profileTimeLevel" typeId="profileTimeLevel"/>
			<channel id="profileMaxFlow" typeId="profileMaxFlow"/>
			<channel id="profileReturnTime" typeId="profileReturnTime"/>
			<channel id="profileMicroleakage" typeId="profileMicroleakage"/>
			<channel id="profileBuzzerOn" typeId="profileBuzzerOn"/>
			<channel id="profileLeakageWarningOn" typeId="profileLeakageWarningOn"/>
		</channels>

		<config-description>
			<parameter name="ipAddress" type="text" required="true">
				<context>network-IP</context>
				<label>Ip address</label>
				<description>Hostname or IP address of the device</description>
			</parameter>
			<parameter name="refreshInterval" type="integer" unit="s" min="1">
				<label>Refresh Interval</label>
				<description>Interval the device is polled in sec.</description>
				<default>600</default>
				<advanced>true</advanced>
			</parameter>
		</config-description>
	</thing-type>

	<channel-type id="shutoff">
		<item-type>Switch</item-type>
		<label>Shutoff</label>
		<description>Shutoff channel</description>
	</channel-type>
	<channel-type id="selectProfile">
		<item-type>Number</item-type>
		<label>Select Profile</label>
		<description>Select a profile from 1 to 8</description>
		<state min="1" max="8" step="1" pattern="%d" readOnly="false"/>
	</channel-type>
	<channel-type id="numberOfProfiles">
		<item-type>Number</item-type>
		<label>Number of Profiles</label>
		<description>The number of available profiles for the user</description>
		<state readOnly="true"/>
	</channel-type>
	<channel-type id="profileAvailability">
		<item-type>Switch</item-type>
		<label>Profile Availability</label>
		<description>Shows the availability status of the selected profile</description>
		<category>Switch</category>
	</channel-type>
	<channel-type id="profileName">
		<item-type>String</item-type>
		<label>Profile Name</label>
		<description>The name of the current profile</description>
		<state readOnly="false"/>
	</channel-type>

	<channel-type id="profileVolumeLevel">
		<item-type>String</item-type>
		<label>Profile Volume Level</label>
		<description>Volume level of the current profile</description>
		<state readOnly="true"></state>
	</channel-type>

	<channel-type id="profileTimeLevel">
		<item-type>String</item-type>
		<label>Profile Time Level</label>
		<description>Time level of the current profile</description>
		<state readOnly="true"></state>
	</channel-type>

	<channel-type id="profileMaxFlow">
		<item-type>String</item-type>
		<label>Profile Max Flow</label>
		<description>Maximum flow of the current profile</description>
		<state readOnly="true"></state>
	</channel-type>

	<channel-type id="profileReturnTime">
		<item-type>String</item-type>
		<label>Profile Return Time</label>
		<description>Return time of the current profile</description>
		<state readOnly="true"></state>
	</channel-type>

	<channel-type id="profileMicroleakage">
		<item-type>Switch</item-type>
		<label>Profile Microleakage</label>
		<description>Microleakage status of the current profile</description>
		<state readOnly="true"></state>
	</channel-type>

	<channel-type id="profileBuzzerOn">
		<item-type>Switch</item-type>
		<label>Profile Buzzer On</label>
		<description>Buzzer status of the current profile</description>
		<state readOnly="true"></state>
	</channel-type>

	<channel-type id="profileLeakageWarningOn">
		<item-type>Switch</item-type>
		<label>Profile Leakage Warning On</label>
		<description>Leakage warning status of the current profile</description>
		<state readOnly="true"></state>
	</channel-type>

</thing:thing-descriptions>
